 * @file
 * Install hooks to enable modules.
 */

/**
 * Implements hook_install().
 */
function rivers_site_install() {

  $modules = array(
    'admin_menu',
    'admin_menu_toolbar',
    'admin_views',
    'ctools',
    'environment',
    'environment_indicator',
    'strongarm',
    'features',
    'libraries',
    'pathauto',
    'redirect',
    'entity',
    'file_entity',
    'media',
    'diff',
    'field_group',
    'geofield',
    'jquery_update',
    'rivers_site',
    'rivers_accounts',
    'rivers_page',
    'rivers_story',
    'rivers_submission',
    'rivers_incident',
    'views_bulk_operations',
    'rivers_issue',
    'rivers_media_release',
    'rivers_guide',
    'rivers_event',
    'rivers_forum',
    'globalredirect'
  );
  foreach ($modules as $module) {
    echo "Enabling $module\n";
    _rivers_site_enable_module($module);
  }

  _rivers_site_disable_module('overlay');
  _rivers_site_disable_module('toolbar');

  // Enable the theme.
  watchdog('rivers_site', 'Enabling rivers.org.nz theme.');
  theme_enable(array('riversorgnz'));
  variable_set('theme_default', 'riversorgnz');
}

